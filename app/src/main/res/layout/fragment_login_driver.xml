<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginDriverFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/imgview_logo"
            android:layout_width="294dp"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/edt_truckreg"
            app:srcCompat="@drawable/logo_full" />

        <EditText
            android:id="@+id/edt_truckreg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_main"
            android:backgroundTint="@color/neutral4"
            android:ems="10"
            android:hint="กรุณากรอกทะเบียนรถ"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:text="ต่อไป"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_main"
            android:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_truckreg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>